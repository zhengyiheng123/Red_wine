<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/store_iv"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:scaleType="fitXY"
         />
    <TextView
        android:id="@+id/store_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        android:text=""
        android:textColor="@color/material_textBlack_black"
        android:textSize="@dimen/text_18" />
    <TextView
        android:id="@+id/store_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_iv"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="80dp"
        android:drawableRight="@mipmap/xiaojiubei"
        android:layout_marginTop="12dp"
        android:drawablePadding="4dp"
        android:text=""
        android:textColor="@color/material_amber_A700"
        android:textSize="@dimen/text_18" />

    <TextView
        android:id="@+id/store_tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_tv_title"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:layout_marginBottom="16dp"
        android:textColor="@color/material_amber_A100"
        android:textSize="@dimen/text_16" />

</RelativeLayout>
</android.support.v7.widget.CardView>