<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="12dp"
        android:text="今天离开地方撒熬过来骄傲了可能flag加快链接发来看见过啦埃及古拉加两个卡价格家里感觉啊看了感觉案件嘎啦果捡垃圾"
        android:id="@+id/item_message_content"
        android:textColor="#666666"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:id="@+id/item_message_time"
        android:paddingRight="12dp"
        android:textColor="@color/material_textBlack_secondaryText"
        android:text="来自系统管理员 07-10 17:34:34"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="12dp"
        android:background="@color/line"/>

</LinearLayout>